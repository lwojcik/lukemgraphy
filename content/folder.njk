---
layout: base
pagination:
    data: apiData.folders
    size: 1
    alias: folder
    addAllPagesToCollections: true
permalink: "{{ folder.link }}"
eleventyComputed:
  title: "{{ folder.name }}"
---

<div class="breadcrumb">
  <a href="{{ folder.link }}" class="current">{{ folder.name }}</a>
</div>

<ul class="gallery-list">
{% for gallery in folder.galleries %}
  <li>
    <a href="{{ gallery.link }}">
      <img class="lazy-load-img" data-src="{{ gallery.cover }}" alt="{{ gallery.name }} - cover image" />
      <noscript>
        <img src="{{ gallery.cover }}" alt="{{ gallery.name }} - cover image" />
      </noscript>
      <p class="name">{{ gallery.name }}</p>
    </a>
  </li>
{% endfor %}
</ul>