---
layout: base
pagination:
    data: apiData.galleries
    size: 1
    alias: gallery
    addAllPagesToCollections: true
permalink: "{{ gallery.link }}"
eleventyComputed:
  title: "{{ gallery.name }}"
---

<div class="breadcrumb">
<a href="{{ gallery.parent.folder.link }}">{{ gallery.parent.folder.name }}</a> / <a href="{{ gallery.link }}" class="gallery-link">{{ gallery.name }}</a>
</div>

{# {{ gallery.name }}<br/><br/>
{{ gallery.link }}<br/><br/>
{{ gallery.date }}<br/><br/><br/> #}

{# {% if gallery.older %}
Older Gallery: <a href="{{ gallery.older.link }}">{{ gallery.older.name }}</a><br/><br/>
{% endif %}
{% if gallery.newer %}
Newer Gallery: <a href="{{ gallery.newer.link }}">{{ gallery.newer.name }}</a><br/><br/>
{% endif %} #}

<ul class="image-list masonry">
{% for image in gallery.images %}
{% set imageAlt %}{{ gallery.name }} - image {{ loop.index }} of {{ gallery.images.length }}{% endset %}
{% set imageSrc = image.variants.w640 %}
  <li>
    <a href="{{ image.link }}">
      <img
        class="lazy-load-img"
        alt="{{ imageAlt }}"
        data-src="{{ imageSrc }}"
      />
      <noscript>
        <img alt="{{ imageAlt }}" src="{{ imageSrc }}" />
      </noscript>
    </a>
  </li>
{% endfor %}
</ul>