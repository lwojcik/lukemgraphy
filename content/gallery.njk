---
layout: base
pagination:
    data: apiData.galleries
    size: 1
    alias: gallery
    addAllPagesToCollections: true
permalink: "{{ gallery.link }}"
eleventyComputed:
  title: "{{ gallery.name }}"
---

hi gallery view<br/><br/><br/><br/>

Breadcrumb: {{ gallery.parent.folder.name }} -> {{ gallery.name }}<br/><br/>

{{ gallery.name }}<br/><br/>
{{ gallery.link }}<br/><br/>
{{ gallery.date }}<br/><br/><br/>

{% if gallery.older %}
Older Gallery: <a href="{{ gallery.older.link }}">{{ gallery.older.name }}</a><br/><br/>
{% endif %}
{% if gallery.newer %}
Newer Gallery: <a href="{{ gallery.newer.link }}">{{ gallery.newer.name }}</a><br/><br/>
{% endif %}

{% for image in gallery.images %}
<a href="{{ image.link }}">
  <img alt="" src="{{ image.variants.o }}" />
</a>
<br/><br/>
{% endfor %}
