---
layout: base
pagination:
    data: apiData.images
    size: 1
    alias: image
    addAllPagesToCollections: true
permalink: "{{ image.link }}"
eleventyComputed:
  title: "{{ image.name }} - {{ image.parent.gallery.name }}"
---

<div class="breadcrumb">
  <a href="/{{ image.parent.folder.slug }}/">{{ image.parent.folder.name }}</a>
  /
  <a href="/{{ image.parent.folder.slug }}/{{ image.parent.gallery.slug }}/">{{ image.parent.gallery.name }}</a>
  /
  <a href="/{{ image.parent.folder.slug }}/{{ image.parent.gallery.slug }}/{{ image.name }}/" class="current">{{ image.name }}</a>
</div>

